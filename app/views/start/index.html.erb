  </div>
  <div class="row justify-content-around">
    <div class="col-2 column list-group d-none d-lg-block">
      <% @players.each do |player| %>
        <% if player.activated != false%>
          <a href="/users/<%=player.id%>" class="list-group-item list-group-item-action">
            <%= gravatar_for player, size: 30 %>
            <%= player.name %>
          </a>
        <% else %>
          <p class="list-group-item text-muted">
            <%= disabled_gravatar_for(player, size: 30) %>
            <%= player.name %>
          </p>
        <% end %>
      <% end %>
    </div>
